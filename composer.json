{
    "name": "hyperf-ext/mail",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "mail"
    ],
    "description": "The Hyperf Mail package.",
    "authors": [
        {
            "name": "Eric Zhu",
            "email": "eric@zhu.email"
        },
        {
            "name": "Taylor Otwell",
            "email": "taylor@laravel.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HyperfExt\\Mail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Mail\\": "tests"
        }
    },
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "ext-swoole": ">=4.5",
        "hyperf-ext/contract": "~2.2.0",
        "hyperf/async-queue": "~2.2.0",
        "hyperf/command": "~2.2.0",
        "hyperf/config": "~2.2.0",
        "hyperf/devtool": "~2.2.0",
        "hyperf/di": "~2.2.0",
        "hyperf/event": "~2.2.0",
        "hyperf/filesystem": "~2.2.0",
        "hyperf/framework": "~2.2.0",
        "hyperf/translation": "~2.2.0",
        "hyperf/view": "~2.2.0",
        "swiftmailer/swiftmailer": "^6.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/testing": "~2.2.0",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "dev-master",
        "mockery/mockery": "^1.0"
    },
    "suggest": {
        "hyperf/guzzle": "Required to use the mail driver (^2.0).",
        "alibabacloud/dm": "Required to use the Aliyun (Alibaba Cloud) DM mail driver (^1.8).",
        "aws/aws-sdk-php": "Required to use the AWS SES mail driver (^3.0).",
        "wildbit/swiftmailer-postmark": "Required to use Postmark mail driver (^3.3)."
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "HyperfExt\\Mail\\ConfigProvider"
        }
    }
}
